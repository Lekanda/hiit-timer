{%  extends "base.jinja2" %}

{% block content %}
    <h1>REST</h1>
    <div id="timer">
        {{ rest }}s
    </div>

    <progress max="{{ rest }}" value="{{ rest }}" class="progress progress--rest" id="progressBar"></progress>

    <script type="application/javascript">
        const timerElement = document.getElementById("timer");
        const progressBar = document.getElementById("progressBar")

        var repCounter = progressBar.max;

        const interval = setInterval(() => {
            if (repCounter <= 1) {
                window.location.href = "{{ url_for('exercise', sets=sets) }}";
                clearInterval(interval);
            }

            repCounter = repCounter - 1;
            
            timerElement.innerText = repCounter + "s";
            progressBar.value = repCounter;
        }, 1000);
    </script>
{% endblock %}
